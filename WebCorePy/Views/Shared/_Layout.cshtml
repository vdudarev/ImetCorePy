@{
    var lang = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @localizer["appName"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">@localizer["appName"]</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@localizer["homePage"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Format">@localizer["dataFormat"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Calc" asp-action="Index">@localizer["calculations"]</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-globe"></i> @System.Globalization.CultureInfo.CurrentCulture.DisplayName
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Language" asp-action="Index" asp-route-culture="en">En</a></li>
                                <li><a class="dropdown-item" asp-controller="Language" asp-action="Index" asp-route-culture="ru">Ru</a></li>
                            </ul>
                        </li>
                    </ul>
                    @if (lang == "ru")
                    {
                        <partial name="_LoginPartial" />
                    }
                    else
                    {
                        <partial name="_LoginPartialEng" />
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <span title="@localizer["systemCoreUpdatedOn"] @WebCorePy.Utils.FileUtils.Version()">
                &copy; @localizer["footerCopyright"] 2019-@DateTime.Now.Year
            </span> - @localizer["appName"] - <a asp-area="" asp-controller="Home" asp-action="Privacy">@localizer["policy"]</a>
            @if (this.User.IsInRole("Administrator"))
            {
                @Html.Raw(" [")

                <a asp-area="IdentityManager" asp-controller="Home" asp-action="Users">@localizer["users"]</a>

                @Html.Raw("]")
                @Html.Raw(" [")

                <a asp-area="IdentityManager" asp-controller="Home" asp-action="Roles">@localizer["roles"]</a>

                @Html.Raw("]")
            }
            @if (User?.Identity?.Name?.Contains("vic.dudarev") ?? false)
            {
                @Html.Raw(" [")

                <a asp-controller="Srv" asp-action="Index">Srv</a>

                @Html.Raw("]")
            }
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
